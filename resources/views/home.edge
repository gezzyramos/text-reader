<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Text Reader</title>
  {{ style('style') }}
  {{ script('https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js') }}
</head>
<body>
  <section>

        <div class="row pt-3">

            <div class="container">
                <div class="col-sm-12">

                <div class="card">
                    <div class="card-header">
                        Text Reader
                    </div>

                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-12 col-md-6 mb-3">
                                <form id="form">
                                    <div class="form-group">
                                        <label for="comment">Comentário</label>
                                        <textarea class="form-control" id="comment" rows="3"></textarea>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-12 text-center">
                                            <button type="button" class="btn btn-primary col-sm-12" id="send-comment">Cadastrar</button>
                                        </div>
                                    </div>
                                </form>
                            </div>

                            <div class="col-sm-12 col-md-6">
                                <h6>Comentários</h6>
                                <ul id="comment-list" class="list-group">
                                    <div class="lds-ripple align-self-center"><div></div><div></div></div>
                                    
                                    @each(comment in comments)
                                        <li id="comment-{{comment.id}}" class="list-group-item">
                                            <div class="row">
                                                <div class="col-sm-10 col-xs-9">
                                                    {{ comment.text }}
                                                </div>
                                                <div class="col-sm-2 col-xs-3">
                                                    <button type="button" class="btn btn-sm btn-outline-danger col-sm-12 remove" id="{{comment.id}}"><i class="fas fa-times"></i></button>
                                                    <button type="button" class="btn btn-sm btn-outline-primary col-sm-12 play" id="{{comment.id}}"><i class="fas fa-volume-up"></i></button>
                                                </div>
                                            </div>
                                        </li>
                                    @endeach
                                </ul>      
                            </div>
                        </div>
                    </div>
                </div>
            </div>
                
        </div>
    </div>
  </section>
  
  {{ script('app') }}
</body>
</html>

